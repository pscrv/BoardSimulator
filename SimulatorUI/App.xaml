<Application x:Class="SimulatorUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="AppResources/Colours/Colours.xaml" />
                <ResourceDictionary Source="AppResources/Styles/AllStyles.xaml" />
                <ResourceDictionary Source="AppResources/DataTemplates/AllDataTemplates.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
