<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SimulatorUI"
                    xmlns:usercontrols="clr-namespace:SimulatorUI.Resources">

    <DataTemplate DataType="{x:Type local:MemberParametersViewModel}">
        <StackPanel Background="Transparent">

            <Border Style="{StaticResource PropertyBorderStyle}">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <usercontrols:Label_Int_Pair
                            Label="Summons"
                            Value="{Binding HoursForSummons, Mode=TwoWay, Delay=10}" />
                        <usercontrols:Label_Int_Pair
                            Label="OP Preparation"
                            Value="{Binding HoursForOPPreparation, Mode=TwoWay, Delay=10}" />
                        <usercontrols:Label_Int_Pair
                            Label="Decision"
                            Value="{Binding HoursForDecision, Mode=TwoWay,Delay=10}" />
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </DataTemplate>



</ResourceDictionary>