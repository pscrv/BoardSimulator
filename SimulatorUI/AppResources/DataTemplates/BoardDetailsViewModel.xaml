<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:iconpacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    xmlns:local="clr-namespace:SimulatorUI">


    <DataTemplate x:Key="RemovableItemTemplate">
        <StackPanel 
            Orientation="Horizontal" 
            Margin="10">
            
            <ContentControl 
                Content="{Binding}" />
            <Button 
                Content="{iconpacks:PackIconModern Kind=Close}" 
                Command="{
                    Binding Path=DataContext.RemoveMemberCommand, 
                    RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                CommandParameter="{Binding}"
                ToolTip="Remove this member." 
                VerticalAlignment="Top"/>
        </StackPanel>
    </DataTemplate>
    
    

    <DataTemplate DataType="{x:Type local:BoardDetailsViewModel}">
        <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Auto" Height="500">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock 
                    Grid.Column="0" 
                    Grid.Row="0" 
                    Text="Chair" 
                    FontSize="16" 
                    TextWrapping="Wrap"/>

                <StackPanel 
                    Grid.Column="1" 
                    Grid.Row="0" 
                    Orientation="Horizontal">

                    <ContentControl Content="{Binding Chair.ChairParameters}"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock 
                            Text="{Binding ChairType}" 
                            FontSize="16" 
                            Margin="20" 
                            VerticalAlignment="Center"/>
                        <Button 
                            Content="{iconpacks:PackIconModern Kind=Refresh}" 
                            Command="{Binding ChangeBoardTypeCommand}" 
                            ToolTip="Change chair type."/>
                    </StackPanel>
                </StackPanel>

                <StackPanel 
                    Grid.Column="0" 
                    Grid.Row="1">

                    <TextBlock 
                        Text="Technical Members" 
                        FontSize="16" 
                        TextWrapping="Wrap" />

                    <StackPanel Orientation="Horizontal">
                        <Button 
                            Content="{iconpacks:PackIconModern Kind=Add}" 
                            Command="{Binding AddTechnicalMemberCommand}" 
                            ToolTip="Add another technically qualified member."/>
                    </StackPanel>
                </StackPanel>

                <ItemsControl 
                    Grid.Column="1" 
                    Grid.Row="1" 
                    ItemsSource="{Binding Technicals}" 
                    ItemTemplate="{StaticResource RemovableItemTemplate}" />


                <StackPanel 
                    Grid.Column="0" 
                    Grid.Row="2" >

                    <TextBlock 
                        Text="Legal Members" 
                        FontSize="16" 
                        TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal">
                        <Button 
                            Content="{iconpacks:PackIconModern Kind=Add}" 
                            Command="{Binding AddLegalMemberCommand}"
                            ToolTip="Add another legally qualified member."/>
                    </StackPanel>
                </StackPanel>

                <ItemsControl 
                    Grid.Column="1" 
                    Grid.Row="2" 
                    ItemsSource="{Binding Legals}" 
                    ItemTemplate="{StaticResource RemovableItemTemplate}" />
                
            </Grid>
        </ScrollViewer>

    </DataTemplate>


</ResourceDictionary>