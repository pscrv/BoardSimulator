<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:iconpacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    xmlns:local="clr-namespace:SimulatorUI">


    <DataTemplate DataType="{x:Type local:SimulationReportViewModel}">
    
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
            <TextBlock Text="Cases Finished in one year" Padding="5" FontSize="18" TextWrapping="Wrap" />
            <TextBlock Text="{Binding FinishedCaseCount}" Padding="10" FontSize="18"/>           
        </StackPanel>
    
    </DataTemplate>
    
</ResourceDictionary>