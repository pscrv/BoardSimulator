<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SimulatorUI">


    <DataTemplate DataType="{x:Type local:StartupViewModel}">

        <DockPanel>
            <StackPanel 
                DockPanel.Dock="Top"
                Orientation="Horizontal">

                <ContentControl
                    Content="{Binding BoardParametersVM}" 
                    MinWidth="300" />
                <ContentControl
                    Content="{Binding SimulationParametersVM }" 
                    MinWidth="300" />
                <ContentControl
                    Content="{Binding SimulationReportVM }" 
                    MinWidth="300" />
            </StackPanel>


            <Button 
                DockPanel.Dock="Left"
                HorizontalAlignment="Left"
                Margin="10"
                Height="50"
                Width="150"                
                Content="Full Simulation" 
                Command="{Binding FullSimulationCommand}"/>

        </DockPanel>

    </DataTemplate>
    
    
</ResourceDictionary>